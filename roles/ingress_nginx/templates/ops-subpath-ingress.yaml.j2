apiVersion: networking.k8s.io/v1
kind: Ingress
metadata:
  name: ops-subpath-ing
  namespace: monitoring
  annotations:
    cert-manager.io/cluster-issuer: letsencrypt-prod
    kubernetes.io/ingress.class: {{ ops_ingress_class }}
    nginx.ingress.kubernetes.io/proxy-set-headers: ops-proxy-headers
spec:
  ingressClassName: {{ ops_ingress_class }}
  tls:
  - hosts: [{{ ops_fqdn }}]
    secretName: tls-ops-monitoring
  rules:
  - host: {{ ops_fqdn }}
    http:
      paths:
      - path: /grafana
        pathType: Prefix
        backend:
          service:
            name: {{ grafana_service_name }}
            port:
              number: {{ grafana_service_port }}
      - path: /prometheus
        pathType: Prefix
        backend:
          service:
            name: {{ prometheus_service_name }}
            port:
              number: {{ prometheus_service_port }}
      - path: /alertmanager
        pathType: Prefix
        backend:
          service:
            name: {{ alertmanager_service_name }}
            port:
              number: {{ alertmanager_service_port }}

